<div class="row">
  <div class="columns">
    <h2>Sign up</h2>
  </div>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= render :partial => "devise/shared/email_password", :locals => {:f => f} %>

  <div class="row">
    <div class="large-4 columns">
      <%= f.label :password_confirmation, "confirm password" %>
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="row">
    <div class="columns">
      <%= f.submit "Sign up", :class => "button small radius" %>
    </div>
  </div>
<% end %>

  <div class="row">
    <div class="columns">
      <%= render "devise/shared/links" %>
    </div>
  </div>
