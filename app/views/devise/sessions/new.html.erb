<div class="row">
  <div class="columns">
    <h2>Sign in</h2>
  </div>
</div>


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <%= render :partial => "devise/shared/email_password", :locals => {:f => f} %>

  <% if devise_mapping.rememberable? -%>
    <div class="row">
      <div class="columns">
        <%= f.check_box :remember_me %> <%= f.label :remember_me, "remember me" %>
      </div>
    </div>
  <% end -%>

  <div class="row">
    <div class="columns">
      <%= f.submit "Sign in", :class => "button small radius" %>
    </div>
  </div>
<% end %>

  <div class="row">
    <div class="columns">
      <%= render "devise/shared/links" %>
    </div>
  </div>
