<div class="small-6 small-offset-1 columns">
  <%= render :partial => "devise/shared/header", :locals => {:message => "Resend unlock instructions"} %>

  <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <%= render :partial => "devise/shared/email", :locals => {:f => f} %>

    <div class="row">
      <div class="columns">
        <%= f.submit "Resend unlock instructions", :class => "button small radius" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
